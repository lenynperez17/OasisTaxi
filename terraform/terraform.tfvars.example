# OASIS TAXI - Terraform Configuration Example
# Copy this file to terraform.tfvars and customize the values

# Required variables
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Environment configuration
environment        = "prod"  # dev, staging, prod
firestore_location = "us-central"

# GitHub repository for CI/CD (optional)
github_owner = "your-github-username"
github_repo  = "oasis-taxi"

# CORS configuration
allowed_origins = [
  "https://yourdomain.com",
  "https://www.yourdomain.com",
  "https://app.yourdomain.com"
]

# Function configuration
max_instances    = 100
function_memory  = "512MB"
function_timeout = 60

# Security and performance
api_rate_limit     = 100
jwt_expiry_hours   = 24
cache_ttl_seconds  = 300

# Retention policies
log_retention_days      = 90
backup_retention_days   = 30
analytics_retention_days = 365

# Monitoring and notifications
enable_monitoring   = true
notification_email  = "admin@yourdomain.com"

# Feature flags
enable_logging              = true
enable_analytics           = true
enable_cors                = true
enable_ssl                 = true
enable_compression         = true
enable_caching             = true
enable_rate_limiting       = true
enable_security_headers    = true
enable_request_logging     = true
enable_performance_monitoring = true

# Performance monitoring
performance_sample_rate = 0.1  # 10% of requests

# Third-party service configuration
mercadopago_environment = "sandbox"  # sandbox or production
email_provider         = "sendgrid"  # sendgrid, ses, smtp
sms_provider          = "twilio"     # twilio, aws-sns
fcm_enabled           = true

# Example production configuration:
# mercadopago_environment = "production"
# api_rate_limit = 1000
# max_instances = 500
# function_memory = "1GB"
# performance_sample_rate = 0.05

# Example development configuration:
# environment = "dev"
# api_rate_limit = 50
# max_instances = 10
# function_memory = "256MB"
# enable_analytics = false
# log_retention_days = 7